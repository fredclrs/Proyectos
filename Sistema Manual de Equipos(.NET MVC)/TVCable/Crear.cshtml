@model Cotas800.Models.Entidades.TVCable

@{
    ViewBag.Title = "Crear";
    List<SelectListItem> Items = (List<SelectListItem>)ViewBag.ItemsTV;
}

<br />
<h3>Crear Nuevo TVCable</h3>

@using (Html.BeginForm("Crear", "TVCable", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Img1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ImagenFile, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Img1, "", new { @class = "text-danger" })
                </div>
            </div>               
                <div class="form-group">
                    @Html.LabelFor(model => model.Img2, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ImagenFile2, new { type = "file", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ImagenFile2, "", new { @class = "text-danger" })
                    </div>
                </div>               

        </div>

        <div class="row">

            <div class="form-group">
                @Html.LabelFor(model => model.Img3, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ImagenFile3, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ImagenFile3, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Img4, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ImagenFile4, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ImagenFile4, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Manual(Opciona):</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ManualFile, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ManualFile, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tecnologia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Tecnologia, Items, "Selecciona Una Tecnologia", new { @calss = "form-control" })
                </div>
            </div>
        </div>
        <br/>
        <div class="form-group">
            <h6>Explicacion de la Falla o Pasos a Seguir(Opcional):</h6>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control ckeditor", @id = "ckeditor", @rows = "15", @cols = "50", @placeholder = "Escribe funciones de Led aquí", @style = "background-color: white; min-width: 100%;" })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Volver Atras", "Index", new { }, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}
